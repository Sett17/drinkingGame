<div id="options-top">
    <div id="options-backbtn" class="btn" onclick="changePage('startmenu')">&#171;</div>
</div>
<div id="options-switches">
<div id="options-difficultyWrapper" class="options-wrapper">
    <div class="options-wrapperTitle">Spielstimmung</div>
    <div class="options-wrapperInside">
        <div class="option-switch">
            <div class="options-chkbx" data-id="0" onclick="options.difficulty.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.difficulty.changed(this.previousSibling.previousSibling.dataset.id)">Chill
            </div>
        </div>
        <div class="option-switch">
            <div class="options-chkbx" data-id="1" onclick="options.difficulty.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.difficulty.changed(this.previousSibling.previousSibling.dataset.id)">Geht ab
            </div>
        </div>
        <div class="option-switch">
            <div class="options-chkbx" data-id="2" onclick="options.difficulty.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.difficulty.changed(this.previousSibling.previousSibling.dataset.id)">Absturz
            </div>
        </div>
    </div>
</div>
<div id="options-countWrapper" class="options-wrapper">
    <div class="options-wrapperTitle">BAC berechnen?</div>
    <div class="options-wrapperInside">
        <div class="option-switch">
            <div class="options-chkbx" data-id="0" onclick="options.bac.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.bac.changed(this.previousSibling.previousSibling.dataset.id)">Klar
            </div>
        </div>
        <div class="option-switch">
            <div class="options-chkbx" data-id="1" onclick="options.bac.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.bac.changed(this.previousSibling.previousSibling.dataset.id)">Nein!
            </div>
        </div>
    </div>
</div>
<div id="options-drinkWrapper" class="options-wrapper">
    <div class="options-wrapperTitle">Drinks</div>
    <div class="options-wrapperInside">
        <div class="option-switch">
            <div class="options-chkbx" data-id="0" onclick="options.drinks.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.drinks.changed(this.previousSibling.previousSibling.dataset.id)">Bier
            </div>
        </div>
        <div class="option-switch">
            <div class="options-chkbx" data-id="1" onclick="options.drinks.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.drinks.changed(this.previousSibling.previousSibling.dataset.id)">Mische
            </div>
        </div>
        <div class="option-switch">
            <div class="options-chkbx" data-id="2" onclick="options.drinks.changed(this.dataset.id)"></div>
            <div class="options-switchTitle"
                 onclick="options.drinks.changed(this.previousSibling.previousSibling.dataset.id)">Shots
            </div>
        </div>
    </div>
</div>
</div>